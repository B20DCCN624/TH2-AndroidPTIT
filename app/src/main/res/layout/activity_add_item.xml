<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddItem"
    android:orientation="vertical">

    <TextView
        android:text="Thêm công việc"
        android:textStyle="bold"
        android:textSize="28dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/tv_add_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên công việc"
        android:background="@drawable/border_radius"
        android:backgroundTint="#EEEEEE"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="16dp"/>

    <EditText
        android:id="@+id/tv_add_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nội dung"
        android:background="@drawable/border_radius"
        android:backgroundTint="#EEEEEE"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:textSize="16dp"/>

    <EditText
        android:id="@+id/tv_add_date"
        android:hint="Ngày hoàn thành"
        android:background="@drawable/border_radius"
        android:backgroundTint="#EEEEEE"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tình trạng"
        android:textSize="18dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

    <Spinner
        android:id="@+id/add_spin_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_radius"
        android:backgroundTint="#EEEEEE"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="16dp"/>

    <CheckBox
        android:id="@+id/checkIsLike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cộng tác"
        android:textSize="18dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btn_cancle_work"
            android:text="Hủy bỏ"
            android:backgroundTint="#e74c3c"
            android:textSize="18dp"
            android:layout_marginEnd="20dp"
            android:layout_width="120dp"

            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_add_work"
            android:layout_toRightOf="@+id/btn_cancle_work"
            android:text="Thêm"
            android:textSize="18dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>